<?xml version="1.0" standalone="no"?>
<!DOCTYPE swatml SYSTEM "http://swat.silverorange.com/swatml1.dtd">
<swatml>
	<widget class="SwatMessageDisplay" id="message_display" />
	<widget class="SwatFrame" id="edit_frame">
		<property name="title">Clone Catalog</property>
		<widget class="SwatForm" id="edit_form">
			<widget class="AdminNote">
				<property name="content">Cloning creates an exact duplicate of the selected catalog. The new cloned catalog is unavailable by default on the public website. Work such as seasonal updating, pricing adjustments and new product entry may then be performed on the new cloned catalog. When all of the desired changes have been made, the new cloned catalog may be made available to the public. Enabling the new cloned catalog automatically disables the old catalog.</property>
			</widget>
			<widget class="SwatFieldset">
				<property name="title">Original Details</property>
				<widget class="SwatDetailsView" id="original_details">
					<object class="SwatDetailsViewField">
						<property name="title">Title</property>
						<object class="SwatTextCellRenderer">
							<property name="text" type="data">title</property>
						</object>
					</object>
					<object class="SwatDetailsViewField" id="status">
						<property name="title">Status</property>
						<object class="StoreCatalogStatusCellRenderer" id="status_renderer">
							<property name="catalog" type="data">id</property>
						</object>
					</object>
				</widget>
			</widget>
			<widget class="SwatFieldset">
				<property name="title">Clone Details</property>
				<widget class="SwatFormField">
					<property name="title">Title</property>
					<widget class="SwatEntry" id="title">
						<property name="required" type="boolean">true</property>
					</widget>
				</widget>
			</widget>
			<widget class="SwatFooterFormField">
				<widget class="SwatButton" id="submit_button">
					<property name="title">Clone Catalog</property>
				</widget>
			</widget>
		</widget>
	</widget>
</swatml>
