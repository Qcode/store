<?xml version="1.0" standalone="no"?>
<!DOCTYPE swatml SYSTEM "http://swat.silverorange.com/swatml1.dtd">
<swatml>
	<widget class="SwatMessageDisplay" id="message_display" />
	<widget class="SwatFrame" id="edit_frame">
		<property name="title" translatable="yes">Change Product Image for</property>
		<widget class="SwatForm" id="edit_form">
			<widget class="SwatImagePreviewDisplay" id="image">
				<property name="visible" type="boolean">false</property>
			</widget>
			<widget class="SwatFieldset">
				<property name="title" translatable="yes">Image Options</property>
				<widget class="SwatFormField">
					<property name="title" translatable="yes">Caption</property>
					<widget class="SwatEntry" id="title">
						<property name="maxlength" type="integer">255</property>
					</widget>
				</widget>
				<widget class="SwatFormField">
					<property name="title" translatable="yes">Description</property>
					<widget class="SwatTextarea" id="description" />
				</widget>
				<widget class="SwatFormField">
					<property name="title" translatable="yes">Show Border</property>
					<widget class="SwatCheckbox" id="border">
						<property name="value" type="boolean">true</property>
					</widget>
				</widget>
			</widget>
			<widget class="SwatFieldset">
				<property name="title" translatable="yes">Upload an Image to be Automatically Resized</property>
				<widget class="SwatFormField">
					<property name="title" translatable="yes">Image</property>
					<widget class="SwatFileEntry" id="original_image">
						<property name="accept_mime_types[]">image/jpeg</property>
					</widget>
				</widget>
			</widget>
			<widget class="SwatMessageDisplay" id="message">
				<property name="visible" type="boolean">true</property>
			</widget>
			<widget class="SwatFieldset" id="manual_fieldset">
				<property name="title" translatable="yes">or Upload Images that have been Manually Resized</property>
			</widget>
			<widget class="SwatFooterFormField">
				<widget class="SwatButton" id="submit_button">
					<property name="title" translatable="yes">Upload</property>
				</widget>
			</widget>
		</widget>
	</widget>
</swatml>
