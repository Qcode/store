<?xml version="1.0" standalone="no"?>
<!DOCTYPE swatml SYSTEM "http://swat.silverorange.com/swatml1.dtd">
<swatml>
	<widget class="SwatForm" id="edit_form">
		<widget class="SwatMessageDisplay" id="message_display" />
		<widget class="SwatFormField" id="old_password_field">
			<property name="title" translatable="yes">Enter Your Current Password</property>
			<property name="note" translatable="yes"><![CDATA[ <a href="account/forgotpassword">Forgot your current password?</a>]]></property>
			<property name="note_content_type">text/xml</property>
			<widget class="SwatPasswordEntry" id="old_password">
				<property name="autocomplete" type="boolean">false</property>
				<property name="minlength" type="integer">4</property>
				<property name="maxlength" type="integer">255</property>
				<property name="required" type="boolean">true</property>
			</widget>
		</widget>
		<widget class="SwatFormField" id="password_field">
			<property name="title" translatable="yes">Choose a New Password</property>
			<widget class="SwatPasswordEntry" id="password">
				<property name="autocomplete" type="boolean">false</property>
				<property name="minlength" type="integer">4</property>
				<property name="maxlength" type="integer">255</property>
				<property name="required" type="boolean">true</property>
			</widget>
		</widget>
		<widget class="SwatFormField" id="confirm_password_field">
			<property name="title" translatable="yes">Re-type the New Password</property>
			<widget class="SwatConfirmPasswordEntry" id="confirm_password">
				<property name="autocomplete" type="boolean">false</property>
				<property name="minlength" type="integer">4</property>
				<property name="maxlength" type="integer">255</property>
				<property name="required" type="boolean">true</property>
			</widget>
		</widget>
		<widget class="SwatFooterFormField">
			<widget class="SwatButton" id="submit_button">
				<property name="title" translatable="yes">Update Password</property>
			</widget>
		</widget>
	</widget>
</swatml>
