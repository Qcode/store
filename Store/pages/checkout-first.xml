<?xml version="1.0" standalone="no"?>
<!DOCTYPE swatml SYSTEM "http://swat.silverorange.com/swatml1.dtd">
<swatml>
	<widget class="SwatFieldset" id="basic_info_container">
		<property name="title">Basic Information</property>
	</widget>
	<widget class="SwatFieldset" id="billing_address_container">
		<property name="title">Billing Address</property>
		<property name="classes[]">checkout-column-left</property>
	</widget>
	<widget class="SwatFieldset" id="shipping_address_container">
		<property name="title">Shipping AddressXXX</property>
		<property name="classes[]">checkout-column-right</property>
	</widget>
	<widget class="SwatFieldset" id="payment_method_container">
		<property name="title">Credit Card</property>
		<property name="classes[]">checkout-column-left</property>
	</widget>
	<widget class="SwatFooterFormField" id="checkout_footer">
		<property name="note">You will have a chance to review your order on the next step before purchasing.</property>
		<widget class="SwatButton" id="submit">
			<property name="title">Next Step</property>
		</widget>
	</widget>
</swatml>
