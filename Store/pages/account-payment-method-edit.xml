<?xml version="1.0" standalone="no"?>
<!DOCTYPE swatml SYSTEM "http://swat.silverorange.com/swatml1.dtd">
<swatml>
	<widget class="SwatForm" id="edit_form">
		<widget class="SwatMessageDisplay" id="message_display" />
		<widget class="SwatFormField" id="payment_method_field">
			<property name="title" translatable="yes">Payment Type</property>
			<widget class="SwatRadioList" id="payment_type">
				<property name="required" type="boolean">true</property>
			</widget>
		</widget>
		<widget class="SwatFormField" id="credit_card_number_field">
			<property name="title" translatable="yes">Credit Card Number</property>
			<widget class="StoreCreditCardNumberEntry" id="credit_card_number">
				<property name="required" type="boolean">true</property>
				<property name="maxlength" type="integer">50</property>
			</widget>
		</widget>
		<widget class="SwatFormField" id="credit_card_number_last4_field">
			<!-- TODO: merge this field with the credit_card_number_field and
			           adjust visibility on the contained widgets instead of
			           the fields. -->
			<property name="title" translatable="yes">Credit Card Number</property>
			<property name="visible" type="boolean">false</property>
			<widget class="SwatContentBlock" id="credit_card_number_last4" />
		</widget>
		<widget class="SwatFormField" id="card_issue_number_field">
			<property name="title" translatable="yes">Card Issue Number</property>
			<property name="note" translatable="yes">Required for debit cards.</property>
			<widget class="SwatEntry" id="card_issue_number">
				<property name="maxlength" type="integer">2</property>
				<property name="size" type="integer">4</property>
			</widget>
		</widget>
		<widget class="SwatFormField" id="card_expiry_field">
			<property name="title" translatable="yes">Expiry Date</property>
			<widget class="StoreCreditCardExpiryEntry" id="credit_card_expiry">
				<property name="required" type="boolean">true</property>
			</widget>
		</widget>
		<widget class="SwatFormField" id="card_inception_field">
			<property name="title" translatable="yes">Inception Date</property>
			<property name="note" translatable="yes">Required for debit cards.</property>
			<widget class="StoreCreditCardExpiryEntry" id="card_inception" />
		</widget>
		<widget class="SwatFormField">
			<property name="title" translatable="yes">Name on Card</property>
			<widget class="SwatEntry" id="credit_card_fullname">
				<property name="required" type="boolean">true</property>
				<property name="maxlength" type="integer">255</property>
				<property name="size" type="integer">35</property>
			</widget>
		</widget>
		<widget class="SwatFooterFormField">
			<widget class="SwatButton" id="submit_button">
				<property name="title" translatable="yes">Add New Payment Method</property>
			</widget>
		</widget>
	</widget>
</swatml>
