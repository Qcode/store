<?xml version="1.0" standalone="no"?>
<!DOCTYPE swatml SYSTEM "http://swat.silverorange.com/swatml1.dtd">
<swatml>
	<widget class="SwatMessageDisplay" id="message_display" />
	<widget class="StoreSearchForm" id="search_form">
		<widget class="SwatFrame" id="search_frame">
			<widget class="SwatFormField">
				<property name="title">Keywords</property>
				<widget class="StoreKeywordEntry" id="search_keywords">
					<property name="maxlength" type="integer">255</property>
					<property name="name">keywords</property>
				</widget>
			</widget>
			<widget class="SwatGroupingFormField">
				<property name="visible" type="boolean">false</property>
				<property name="title">Growing Zone</property>
				<widget class="SwatRadioList" id="search_growing_zones" />
			</widget>
			<widget class="SwatFooterFormField">
				<widget class="StoreUnnamedButton" id="submit">
					<property name="title">Search</property>
				</widget>
			</widget>
		</widget>
	</widget>
	<widget class="SwatMessageDisplay" id="search_message" />
	<widget class="SwatFrame" id="article_results_frame">
		<property name="title">Article Search Results</property>
		<property name="visible" type="boolean">false</property>
		<widget class="SwatContentBlock" id="article_results" />
		<widget class="SwatPagination" id="article_pagination">
			<property name="page_size" type="integer">10</property>
		</widget>
	</widget>
	<widget class="SwatFrame" id="category_results_frame">
		<property name="title">Category Search Results</property>
		<property name="visible" type="boolean">false</property>
		<widget class="SwatContentBlock" id="category_results" />
	</widget>
	<widget class="SwatFrame" id="product_results_frame">
		<property name="title">Product Search Results</property>
		<property name="visible" type="boolean">false</property>
		<widget class="SwatContentBlock" id="product_results" />
		<widget class="SwatPagination" id="product_pagination">
			<property name="page_size" type="integer">10</property>
		</widget>
	</widget>
</swatml>
