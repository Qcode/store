<?xml version="1.0" standalone="no"?>
<!DOCTYPE swatml SYSTEM "http://swat.silverorange.com/swatml1.dtd">
<swatml>
	<widget class="SwatForm" id="password_form">
		<widget class="SwatContentBlock">
			<property name="content" translatable="yes"><![CDATA[<p>Forgot your password? No problem.</p><p>Simply enter your email address and a link to create a new password will be sent to you.</p>]]></property>
			<property name="content_type">text/xml</property>
		</widget>
		<widget class="SwatFormField">
			<property name="title" translatable="yes">Email</property>
			<widget class="SwatEmailEntry" id="email">
				<property name="required" type="boolean">true</property>
				<property name="maxlength" type="integer">255</property>
			</widget>
		</widget>
		<widget class="SwatFooterFormField">
			<widget class="SwatButton">
				<property name="title" translatable="yes">Request a New Password</property>
			</widget>
		</widget>
	</widget>
</swatml>
