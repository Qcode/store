<?xml version="1.0" standalone="no"?>
<!DOCTYPE swatml SYSTEM "http://swat.silverorange.com/swatml1.dtd">
<swatml>
	<widget class="SwatDisplayableContainer" id="shipping_address_list_container">
		<widget class="SwatFormField" id="shipping_address_list_field">
			<widget class="SwatRadioTable" id="shipping_address_list">
				<property name="required" type="boolean">true</property>
				<property name="value">billing</property>
			</widget>
		</widget>
		<widget class="SwatContentBlock" id="account_shipping_address_region_message" />
	</widget>
	<widget class="SwatFieldset" id="shipping_address_form">
		<widget class="SwatFormField" id="shipping_address_fullname_field">
			<property name="title" translatable="yes">First Name &amp; Last Name</property>
			<widget class="SwatEntry" id="shipping_address_fullname">
				<property name="required" type="boolean">true</property>
				<property name="maxlength" type="integer">255</property>
				<property name="size" type="integer">35</property>
			</widget>
		</widget>
		<widget class="SwatFormField" id="shipping_address_company_field">
			<property name="title">Company</property>
			<widget class="SwatEntry" id="shipping_address_company">
				<property name="maxlength" type="integer">255</property>
			</widget>
		</widget>
		<widget class="SwatFormField" id="shipping_address_lines_field">
			<widget class="SwatFormField" id="shipping_address_line1_field">
				<property name="title" translatable="yes">Address Line 1</property>
				<widget class="SwatEntry" id="shipping_address_line1">
					<property name="required" type="boolean">true</property>
					<property name="maxlength" type="integer">255</property>
					<property name="size" type="integer">35</property>
				</widget>
			</widget>
			<widget class="SwatFormField" id="shipping_address_line2_field">
				<property name="title" translatable="yes">Address Line 2</property>
				<widget class="SwatEntry" id="shipping_address_line2">
					<property name="maxlength" type="integer">255</property>
					<property name="size" type="integer">35</property>
				</widget>
			</widget>
		</widget>
		<widget class="SwatFormField" id="shipping_address_city_field">
			<property name="title" translatable="yes">City</property>
			<widget class="SwatEntry" id="shipping_address_city">
				<property name="required" type="boolean">true</property>
				<property name="maxlength" type="integer">255</property>
				<property name="size" type="integer">35</property>
			</widget>
		</widget>
		<widget class="SwatFormField" id="shipping_address_provstate_field">
			<property name="title" translatable="yes">Province/State</property>
			<widget class="StoreProvstateFlydown" id="shipping_address_provstate">
				<property name="required" type="boolean">true</property>
				<property name="show_blank" type="boolean">true</property>
			</widget>
			<widget class="SwatEntry" id="shipping_address_provstate_other">
				<property name="maxlength" type="integer">255</property>
				<property name="size" type="integer">35</property>
			</widget>
		</widget>
		<widget class="SwatFormField" id="shipping_address_postalcode_field">
			<property name="title" translatable="yes">Postal/ZIP Code</property>
			<widget class="StorePostalCodeEntry" id="shipping_address_postalcode">
				<property name="required" type="boolean">true</property>
				<property name="maxlength" type="integer">50</property>
			</widget>
		</widget>
		<widget class="SwatFormField" id="shipping_address_country_field">
			<property name="title" translatable="yes">Country</property>
			<property name="note_content_type">text/xml</property>
			<widget class="SwatFlydown" id="shipping_address_country">
				<property name="required" type="boolean">false</property>
				<property name="show_blank" type="boolean">false</property>
			</widget>
		</widget>
		<widget class="SwatFormField" id="shipping_address_phone_field">
			<property name="title" translatable="yes">Phone</property>
			<property name="note" translatable="yes">Please include area code.</property>
			<widget class="SwatEntry" id="shipping_address_phone">
				<property name="maxlength" type="integer">100</property>
				<property name="required" type="boolean">true</property>
			</widget>
		</widget>
	</widget>
</swatml>

